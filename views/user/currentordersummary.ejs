<%- include('../partials/userhomeheader.ejs') -%>
<br><br><br><br>
<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 20px;">
                    <div class="card-header px-4 py-5">
                        <h3 class="mb-0 text-dark" style="font-weight: bold;">Thanks for your Order, <span
                                class="text-success">
                                <%= user.name %>
                            </span>!</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #ff0000;">Receipt</p>
                            <p class=" text-muted mb-0">Receipt Voucher : NAN</p>
                        </div>



                        <% for(let i=1;i<=order.products.items.length;i++){ %>
                            <div class="card shadow-0 border mb-4 text-danger" >
                                <div class="card-body bg-gray">
                                    <div class="row ">
                                        <div class="col-md-2 ">
                                            
                                            <img src="/productImages/<%= order.products.items[i-1].productId.image%>"
                                                class="img-fluid rounded" alt="lol" width="100vw" height="100vh">
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 ">
                                                <%= order.products.items[i-1].productId.product %>
                                            </p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 ">Brand:
                                                <%=order.products.items[i-1].productId.brand%>
                                            </p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0" >Category:<%=
                                                order.products.items[i-1].productId.category %>
                                            </p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 ">Qty:<%= order.products.items[i-1].qty %>
                                            </p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">₹<%=
                                                order.products.items[i-1].productId.price %>
                                            </p>
                                        </div>
                                    </div>
                                    <hr class="mb-4" style="background-color: #d62727; opacity: 3;">
                                </div>
                            </div>
                            <% if(order.status=='delivered' ){ %>

                                <div class="mb-2">
                                        <% if(order.productReturned[i-1]==0){ %>
                                        <a href="/return-product?id=<%= order.products.items[i-1].productId._id%>"
                                            class="col-lg-10 col-xl-12 btn btn-outline-danger"> Return
                                            Product</a>
                                        <% }else{%>
                                            <a href="" style="pointer-events: none;" class="col-lg-10 col-xl-12 btn btn-outline-success">
                                                Product
                                                Returned</a>
                                    <% } %>
        
                                    </div>
                                    <% } %>
                                    <% } %>
                            


                                <div class="d-flex justify-content-between pt-2">
                                    <div class="mb-0">
                                        <p class="text-muted mb-0">Track Order</p>
                                    </div>
                                    <div class="mb-0">
                                        <div class="d-flex justify-content-around mb-1">
                                            <p class="text-muted mt-1 mb-0 ms-xl-5">
                                                <%= order.status %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between pt-2">
                                    <p class="fw-bold mb-0">Order Details</p>
                                    
                                </div>

                                <div class="d-flex justify-content-between pt-2">
                                    <p class="text-muted mb-0">Invoice Number : <%= order._id %>
                                    </p>
                                    <p class="text-muted mb-0"><span
                                            class="fw-bold me-4">Discount</span> ₹0</p>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Invoice Date : <%= order.createdAt.toDateString() %>
                                    </p>

                                </div>

                                <div class="d-flex justify-content-between mb-5">
                                    <p class="text-muted mb-0">Recepits Voucher : none</p>
                                    <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery
                                            Charges</span> Free</p>
                                </div>
                               
                    </div>
                   
                            

                    <div class="card-footer border-0 px-4 py-5 bg-dark"
                        style=" border-bottom-left-radius: 20px; border-bottom-right-radius: 10px;font-weight: bold;color: black;">
                        <h5
                            class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                            Total
                            paid: <span class="h2 mb-0 ms-2">₹<%=order.products.totalprice %></span>
                        </h5>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>
<br><br>

<%- include('../partials/userfooter.ejs') -%>