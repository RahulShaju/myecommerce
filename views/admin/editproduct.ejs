<%- include('../partials/adminheader.ejs') -%>

<div class="text-center mt-3" style="height: 100px">

</div>
<div class="container p-3 mt-3" style="width: 100%; height:100%; border: solid 1px black;border-radius: 5px;">
<form action="/admin/editproduct" method="post" enctype="multipart/form-data">
  <h1 class="text-center">Edit Product</h1>
  <hr>
    <div class="form-group" style="width: 50%;">
        <label for="exampleInputEmail1" style="font-weight: bold;">Product Name</label>
        <input type="text" name="prodname" value ="<%=product.prodname%>" class="form-control bg-light" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter fullname" required>
        
      </div>
      
    
        <div class="form-group"  style="width: 50%;">
          <label for="exampleInputEmail1" style="font-weight: bold;">Product Image</label>
          <input  type="file" name="gimage" class="form-control bg-light" id="exampleInputEmail"  placeholder="Enter email"  >
          
        </div>
        <div class="form-group"  style="width: 50%;">
            <label for="exampleInputEmail1" style="font-weight: bold;">Product Category</label>
            <input type="text" name="category" value="<%=product.category %>" class="form-control" id="exampleInputEmail1"  placeholder="Enter email" required>
            
          </div>
        <div class="form-group"  style="width: 50%;">
          <label for="" style="font-weight: bold;">Brand</label>
          <input type="text" name="brand" value="<%=product.brand %>" class="form-control bg-light" id="exampleInputPassword1" placeholder="Password" required>
        </div>
        <div class="form-group"  style="width: 50%;">
            <label for="" style="font-weight: bold;">Size</label>
            <input type="text" name="size" value="<%=product.size %>" class="form-control bg-light" id="exampleInputPassword1" placeholder="Password" required>
          </div>
        <div class="form-group"  style="width: 50%;">
            <label for="exampleInputPassword1" style="font-weight: bold;">Price</label>
            <input type="text" name="price" value="<%= product.price %>" class="form-control bg-light" id="exampleInputPassword1" placeholder="Enter your mob no" required>
          </div>
        <br>
        <input type="hidden" name="id" value="<%= product._id %>">
        <button type="submit" class="btn btn-secondary">Update</button>
        
        </form>
        </div>
        
