<%- include('../partials/adminheader.ejs') -%>


<div class="text-center text-dark" style="height:100px ;">
  
  </div>
  <form  class="form-header ml-5" action="" >
    <input class="au-input au-input--xl" type="text" name= "search" placeholder="Search by category,name and brand..." />
    <button class="au-btn--submit" type="submit" value="search">
        <i class="zmdi zmdi-search"></i>
    </button>
  </form>

<div class="container p-3">
  <div class="row">
    <div class="col-12">
<table class="table table-hover">
  <h1 class="text-center">Product List</h1>
  <hr>
    <thead>
      
      <tr>
        <th scope="col">Sl No</th>
        <th scope="col">Product</th>
        <th scope="col">Item</th>
        <th scope="col">Category</th>
        <th scope="col">Brand</th>
        <th scope="col">Size</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    
    <tbody>
      <% if(products.length > 0){ %>
       <% for(let i=1;i<=products.length;i++){
          %>
      <tr>
        <th scope="row" ><%= i %></th>
        <td><%= products[i-1].product %></td>
        <td><img src="/productImages/<%= products[i-1].image %>" width="100vw" height="100vh"></td>
        <td><%= products[i-1].category %></td>
        <td><%= products[i-1].brand %></td>
        <td><%= products[i-1].size %></td>
        <td><%= products[i-1].price %></td>
        <td><a href="/admin/delete-product?id=<%=products[i-1]._id %>"><button class="btn btn-danger">Remove</button> </a>
          <a href="/admin/editproduct?id=<%=products[i-1]._id %>"><button class="btn btn-primary">Edit</button></a></td>
        
      </tr>
      <%
    }
  }else{%>
<h3 style="color: red;">product  not found</h3>
  <%}
      %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center container ">
    <% 
    for(let j=1;j <= totalpages;j++){
        %>
    <a href="/admin/viewproduct?page=<%= j %>"><button  type="submit"  class=" btn btn-dark text-white ml-2 " style="border-radius: 40px; width: 40px;height: 40px;"> <%= j %> </button></a>
        <%
    }
    %>
</div>
  
  </div>
  </div>
  </div>
