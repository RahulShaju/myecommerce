<%- include('../partials/adminheader.ejs') -%>
<br><br>
<div class="container-fluid mt-5 bg-light ">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-6">
        <table
        class="table text-start align-middle table-bordered table-hover mb-0"
      >
        <thead>
          <tr class="text-dark">
            <th scope="col"> Title</th>
            <th scope="col">Image</th>
        
            
          </tr>
        </thead>
        <tbody>
          <% if( banner.length > 0){ for(let i = 1;i <= banner.length; i++){ %>
          <tr>
            <td><%= banner[i-1].btitle %></td>
          
            <td><img src="/productImages/<%=banner[i-1].bimage %>" alt="" width="100vw" height="100vh"></td>
            
           
          </tr>
          <% } } else{ %>
          <tr>
            <td colspan="5">Data Not Found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
      </div>

      <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-6">
        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <a href="" class="">
              <h3 class="text-primary">
                <i class="fa fa-user-edit me-2"></i>Add New Banner
              </h3>
            </a>
          </div>
          <form action="/admin/add-banner" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <label for="floatingInput">Banner Title</label>
              <textarea type="text" class="form-control" id="floatingInput" name="title" placeholder="Banner title" ></textarea>
              
            </div>
            
            <div class="mb-3">
              <label for="formFileMultiple" class="form-label">Banner image</label>
              <input class="form-control bg-light" type="file" id="formFileMultiple" name="gimage" multiple />
            </div>
            <!-- <div class="d-flex align-items-center justify-content-between mb-4">
              <div class="form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="exampleCheck1"
  
                />
                <label class="form-check-label" for="exampleCheck1"
                  >Check me out</label
                >
              </div>
            </div> -->
            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">
              Add Banner
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/adminfooter.ejs') %>